{
  "name": "@versita/fp-lib",
  "version": "2.1.10",
  "description": "FP library",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "ts:cjs": "yarn tsc -p ts/cjs.tsconfig.json",
    "ts:es": "yarn tsc -p ts/es.tsconfig.json",
    "ts:typedefs": "yarn tsc -p ts/types.tsconfig.json && mv defs/* ./ && rmdir defs",
    "ts:all": "yarn ts:cjs && yarn ts:es && yarn ts:typedefs",
    "build": "yarn clean && yarn ts:all",
    "clean": "rimraf ./*.d.ts ./*.d.ts.map dist ./types",
    "doc": "./scripts/build-docs",
    "lint": "yarn eslint src/*.ts test/*.ts",
    "prepublishOnly": "yarn test && yarn build",
    "postpublish": "yarn clean",
    "preversion": "./scripts/build-docs && git add docs",
    "test": "jest --unhandled-rejections=strict",
    "tdd": "jest --watch"
  },
  "files": [
    "*.d.ts",
    "*.d.ts.map",
    "dist",
    "src",
    "ember-addon.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/versita-app/fp-lib.git"
  },
  "keywords": [
    "FP",
    "functional-programming",
    "typescript"
  ],
  "author": "Versita",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/versita-app/fp-lib/issues"
  },
  "homepage": "https://github.com/versita-app/fp-lib#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-standard": "^4.1.0",
    "expect-type": "^0.11.0",
    "jest": "^26.6.3",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.2",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__(\\/|\\\\).*\\.test\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/\\.node_modules/",
      "src/index.ts",
      "\\.+\\.d\\.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "statements": 100,
        "lines": 100
      }
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  }
}
